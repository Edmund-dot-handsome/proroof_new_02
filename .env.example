# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Database Configuration (Supabase with Prisma)
# Replace <project> with your Supabase project ID and <password> with your database password
# Use the pooled connection for better performance with Netlify Functions
DATABASE_URL="postgresql://postgres:<DB_PASSWORD>@<PROJECT>.supabase.co:6543/postgres?pgbouncer=true&connection_limit=1&sslmode=require"
DIRECT_URL="postgresql://postgres:<DB_PASSWORD>@<PROJECT>.supabase.co:5432/postgres?sslmode=require"

# Server-side Supabase (for Netlify functions)
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Admin Panel Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password

# Simple Admin Password (for /admin route)
